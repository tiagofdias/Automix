@model Automix.Models.AddPercursoViewModel
@{
}

  @Html.AntiForgeryToken()

<h2>Adicionar Percurso</h2>
<br />
<form class="row g-3" method="post" action="Add" class="mt-5" style="display: inline;">
   <div>
      <label class="form-label">Nome</label>
      <input type="text" class="form-control" asp-for="Nome" required pattern="^[a-z^à-ú A-ZÀ-ú]+$" title="Introduza o Nome corretamente" maxlength="60" style="width: 50%;">
      <br />
      <div class="form-check">
         <label class="form-check-label" for="flexCheckDefault">Estado</label>
         <input class="form-check-input" type="checkbox" asp-for="Status" id="flexCheckDefault">
      </div>
      <br />
      <button type="submit" class="btn btn-outline-primary" style="width: 15%; text-decoration:none; color: inherit;"> <i class="fa-solid fa-floppy-disk" style="font-size: 13px;"></i> Guardar</button>
</form>
<form asp-action="Index" asp-controller="Percursos" method="get" style="display: inline;" >
      <button type="submit" class="btn btn-outline-primary" style="width: 15%; text-decoration:none; color: inherit;" ><i class="fa-solid fa-rotate-left"></i> Voltar</button>

   </div>
</form>

  

